ALERT webinar_host01_network_at_500_MBits
  IF irate(node_network_transmit_bytes{job='webinar-host01'}[3m])*8/1000000 > 500 OR
     irate(node_network_receive_bytes{job='webinar-host01'}[3m])*8/1000000 > 500
  FOR 5m
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }}'s port traffic load {{ $value }} MBytes/sec is at 500 MBytes/sec",
    description = "{{ $labels.instance }} port traffic load {{ $value }} MBytes/sec has exceeded 500 MBytes/sec over the past 5 minutes.",
    severity = "warning"
  }

ALERT webinar_host01_network_at_700_MBits
  IF irate(node_network_transmit_bytes{job='webinar-host01'}[3m])*8/1000000 > 700 OR
     irate(node_network_receive_bytes{job='webinar-host01'}[3m])*8/1000000 > 700
  FOR 5m
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }}'s port traffic load {{ $value }} MBytes/sec is at 700 MBytes/sec",
    description = "{{ $labels.instance }} port traffic load {{ $value }} MBytes/sec has exceeded 700 MBytes/sec over the past 5 minutes.",
    severity = "average"
  }

