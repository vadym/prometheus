ALERT webinar_host01_filesystem_usage_rootfs_70_percent
  IF ( node_filesystem_size{job='webinar-host01',mountpoint='/rootfs'} - node_filesystem_free{job='webinar-host01',mountpoint='/rootfs'} ) / node_filesystem_size{job='webinar-host01',mountpoint='/rootfs'} * 100 > 70
  FOR 3m
  ANNOTATIONS {
    summary = "Instance {{ $labels.filesystem }} filesystem usage {{ $value }}% is at 70%",
    description = "{{ $labels.instance }}'s filesystem {{ $labels.filesystem }} usage {{ $value }}% is at 70% for more than 3 minutes.",
    severity = "warning"
  }

