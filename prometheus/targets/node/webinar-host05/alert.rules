ALERT webinar_host01_cpu_at_70
  IF (1 - avg by(instance)(irate(node_cpu{job='webinar-host01',mode='idle'}[3m]))) * 100 > 70
  FOR 5m
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} CPU usage {{ $value }}% is at 70%",
    description = "{{ $labels.instance }} CPU usage {{ $value }}% has exceeded 70% over the past 5 minutes.",
    severity = "warning"
  }

ALERT webinar_host01_cpu_at_90
  IF (1 - avg by(instance)(irate(node_cpu{job='webinar-host01',mode='idle'}[3m]))) * 100 > 90
