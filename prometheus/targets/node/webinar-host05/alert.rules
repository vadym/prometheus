ALERT webinar_host01_mem_usage_80_percent
  IF (node_memory_MemTotal{job='webinar-host01'} - (node_memory_MemFree{job='webinar-host01'} + node_memory_Cached{job='webinar-host01'} + node_memory_Buffers{job='webinar-host01'})) / node_memory_MemTotal{job='webinar-host01'} * 100 > 80
  FOR 3m
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} memory usage {{ $value }}% more than 80%",
    description = "{{ $labels.instance }} memory usage {{ $value }}% more than 80% for more than 3 minutes.",
    severity = "warning"
  }

ALERT webinar_host01_mem_usage_90_percent
  IF (node_memory_MemTotal{job='webinar-host01'} - (node_memory_MemFree{job='webinar-host01'} + node_memory_Cached{job='webinar-host01'} + node_memory_Buffers{job='webinar-host01'})) / node_memory_MemTotal{job='webinar-host01'} * 100 > 90
  FOR 3m
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} memory usage {{ $value }}% more than 90%",
    description = "{{ $labels.instance }} memory usage {{ $value }}% more than 90% for more than 3 minutes.",
    severity = "average"
  }

