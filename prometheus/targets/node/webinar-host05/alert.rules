ALERT webinar_host01_ContainerStarted
  IF time() - container_start_time_seconds{image=~"registry.COMPANY.local/.*",job='webinar-host01'} <= 60
    and (
      container_start_time_seconds{image=~"registry.COMPANY.local/.*",job='webinar-host01'} % (60 * 60 * 24) / (60 * 60) < 6.8
      or
      container_start_time_seconds{image=~"registry.COMPANY.local/.*",job='webinar-host01'} % (60 * 60 * 24) / (60 * 60) > 7.5
    )
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} container {{$labels.image}} started",
    description = "{{ $labels.instance }} container {{$labels.image}} has been started on {{$labels.host}}",
    severity = "critical"
  }

ALERT webinar_host01_ContainerStopped
  IF time() - container_last_seen{image=~"registry.COMPANY.local/.*",job='webinar-host01'} > 60
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} container {{$labels.image}} stopped",
    description = "{{ $labels.instance }} container {{$labels.image}} has been stopped on {{$labels.host}}",
    severity = "critical"
  }
