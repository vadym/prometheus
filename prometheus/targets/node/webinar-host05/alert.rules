  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} CPU usage {{ $value }}% is at 90%",
    description = "{{ $labels.instance }} CPU usage {{ $value }}% has exceeded 90% over the past 5 minutes.",
    severity = "average"
  }

